<Window x:Class="EasySharpWpf.Sample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasySharpWpf.Sample"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="450"
        >
    <StackPanel>
        <GroupBox Header="Automatically Created UI">
            <Grid Name="BookShelfGrid"/>
        </GroupBox>
        
        <Button Content="Save" Click="SaveClicked" HorizontalAlignment="Center"/>
        
        <Button Content="Show Custom Edit View Sample" Click="ShowCustomEditView" HorizontalAlignment="Center"/>
        
    </StackPanel>
</Window>
