<Window x:Class="EasySharpWpf.Sample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasySharpWpf.Sample"
        mc:Ignorable="d"
        Title="MainWindow"
        SizeToContent="WidthAndHeight"
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <GroupBox Grid.Row="0" Header="Automatically Created UI">
            <Grid Name="BookShelfGrid"/>
        </GroupBox>

        <Button Grid.Row="1" Content="Save" Click="SaveClicked" HorizontalAlignment="Center"/>

        <Button Grid.Row="2" Content="Show Custom Edit View Sample" Click="ShowCustomEditView" HorizontalAlignment="Center"/>

        <Button Grid.Row="3" Content="Check Update" Click="CheckUpdate" HorizontalAlignment="Center"/>
    </Grid>
</Window>
